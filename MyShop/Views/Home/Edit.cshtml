@model MyShop.Models.Product
@{
    ViewBag.Title = "Редактирование товара";
}
<h2>Редактирование товара</h2>

<form asp-action="edit" asp-controller="home" asp-route-id="@Model.Id">
    <div class="form-group">
        <label asp-for="Name" class="control-label">Название</label>
        <input type="text" asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Cost" class="control-label">Цена</label>
        <input type="number" asp-for="Cost" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Company.Name" class="control-label">Компания</label>
        <input type="text" asp-for="Company.Name" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Сохранить" class="btn btn-default" />
    </div>
</form>